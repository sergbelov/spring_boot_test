<?xml version="1.0" encoding="UTF-8"?>
<!--<Configuration status="DEBUG">-->
<Configuration>
    
    <Properties>
<!--        <Property name="log-path">${sys:catalina.base}/logs/CheckingSkillsWeb</Property>-->
        <Property name="log-path">logs</Property>
        <Property name="log-name">logger</Property>
    </Properties>

    <Appenders>
        <RollingFile name="file-log" fileName="${log-path}/${log-name}.log" filePattern="${log-path}/${log-name}-%d{yyyy-MM-dd-HH-mm-ss}.log">

            <PatternLayout>
                <!--<pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [[%t] %c{5}] - %msg%n</pattern>-->
                <!--<Pattern>%d %-5p [[%t][%c{10}] %F:%L] - %m%n</Pattern>-->
                <Pattern>%d [%-5p][[%t][%c{10}]:%L] %m%n</Pattern>
            </PatternLayout>

            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>

            <DefaultRolloverStrategy>
                <Delete basePath="${log-path}" maxDepth="1">
                    <IfLastModified age="P4D"/>
                </Delete>
            </DefaultRolloverStrategy>

        </RollingFile>

        <Console name="console" target="SYSTEM_OUT">
            <!--<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [[%t] %c{5}] - %msg%n"/>-->
            <!--<PatternLayout pattern="%d %-5p [[%t][%c{10}] %F:%L] - %m%n"/>-->
            <PatternLayout pattern="%d [%-5p][[%t][%c{10}]:%L] %m%n"/>
        </Console>

    </Appenders>

    <Loggers>
        <Root level="INFO">
            <appender-ref ref="console"/>
            <appender-ref ref="file-log"/>
        </Root>
    </Loggers>

</Configuration>

